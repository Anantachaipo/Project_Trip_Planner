<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="RoundCorner">
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="TextAppearance.BottomNav" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item> <!-- เปลี่ยนสีข้อความ -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBold18">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="TextNormal16">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="TextNormal14">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/light_blue</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style name="ShapeAppearance.MyCustomCorners" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="InfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>



</resources>