<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivStopImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/place_1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/tvStopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชื่อจุดแวะ"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvStopDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="คำอธิบาย" />

            <TextView
                android:id="@+id/tvStopDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="เวลาพัก: 30 นาที"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginTop="4dp"
                android:inputType="textMultiLine"
                android:minLines="2" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
